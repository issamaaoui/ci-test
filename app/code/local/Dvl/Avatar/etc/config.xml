<?xml version="1.0"?>
<config>
	<modules>
		<Dvl_Avatar>
			<version>1.0.1</version>
		</Dvl_Avatar>
	</modules>
	<frontend>
	    <routers>
            <avatar>
                <use>standard</use>
                <args>
                    <module>Dvl_Avatar</module>
                    <frontName>avatar</frontName>
                </args>
            </avatar>
        </routers>
		<translate>
			<modules>
				<Dvl_Avatar>
					<files>
						<default>Dvl_Avatar.csv</default>
					</files>
				</Dvl_Avatar>
			</modules>
		</translate>
		<layout>
			<updates>
				<avatar>
					<file>dvl_avatar.xml</file>
				</avatar>
			</updates>
		</layout>
	</frontend>
	<adminhtml>
		<layout>
			<updates>
				<avatar>
					<file>dvl.xml</file>
				</avatar>
			</updates>
		</layout>
		<translate>
			<modules>
				<Dvl_Avatar>
					<files>
						<default>Dvl_Avatar.csv</default>
					</files>
				</Dvl_Avatar>
			</modules>
		</translate>
		<events>
			<!-- cet observer me permet de recuperer les valeurs de moderation pour le grid customer sans rewrite -->
			<eav_collection_abstract_load_before>
				<observers>
					<dvl_avatar_eav_before>
						<class>Dvl_Avatar_Model_Adminhtml_Observer</class>
						<method>customer_eav_load_before</method>
					</dvl_avatar_eav_before>
				</observers>
			</eav_collection_abstract_load_before>
			<!-- cet observer me permet de maj le grid customer + le form account sans rewrite -->
			<adminhtml_block_html_before>
				<observers>
					<dvl_avatar_block_before>
						<class>Dvl_Avatar_Model_Adminhtml_Observer</class>
						<method>customer_block_html_before</method>
					</dvl_avatar_block_before>
				</observers>
			</adminhtml_block_html_before>
			<!-- cet observer me permet de save la moderation avatar sans obliger l'affichage de l'attribut quand le module est desactive -->
			<adminhtml_customer_prepare_save>
				<observers>
					<dvl_avatar_save_before>
						<class>Dvl_Avatar_Model_Adminhtml_Observer</class>
						<method>customer_prepare_save</method>
					</dvl_avatar_save_before>
				</observers>
			</adminhtml_customer_prepare_save>
		</events>
	</adminhtml>
	<global>
		<!-- Version <= 1.4.1 -->
		<fieldsets>
			<customer_account>
				<avatar_valid>
					<create>1</create>
					<update>1</update>
				</avatar_valid>
				<avatar_src>
					<create>1</create>
					<update>1</update>
				</avatar_src>
				<avatar_fullpath>
					<create>1</create>
					<update>1</update>
				</avatar_fullpath>
			</customer_account>
		</fieldsets>
		<models>
			<avatar>
				<class>Dvl_Avatar_Model</class>
				<resourceModel>dvl_avatar_model_avatar</resourceModel>
			</avatar>
			<avatar_api2>
				<class>Dvl_Avatar_Model</class>
			</avatar_api2>
		</models>
		<resources>
			<avatar_setup>
				<setup>
					<module>Dvl_Avatar</module>
					<class>Dvl_Avatar_Model_Mysql4_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</avatar_setup>
		</resources>
		<blocks>
			<avatar>
				<class>Dvl_Avatar_Block</class>
			</avatar>
		</blocks>
		<helpers>
			<avatar>
				<class>Dvl_Avatar_Helper</class>
			</avatar>
		</helpers>
		<events>
			<customer_save_before>
				<observers>
					<dvl_avatar_save_before>
						<type>singleton</type>
						<class>Dvl_Avatar_Model_Observer</class>
						<method>customer_save_before</method>
					</dvl_avatar_save_before>
				</observers>
			</customer_save_before>
		</events>
	</global>
</config>