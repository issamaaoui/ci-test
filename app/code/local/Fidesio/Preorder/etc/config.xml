<?xml version="1.0"?>
<config>
    <modules>
        <Fidesio_Preorder>
            <version>1.0.0</version>
        </Fidesio_Preorder>
    </modules>

    <global>
        <models>
            <preorder>
                <class>Fidesio_Preorder_Model</class>
                <resourceModel>preorder_mysql4</resourceModel>
            </preorder>
            <preorder_mysql4>
                <class>Fidesio_Preorder_Model_Mysql4</class>
                <entities>
                    <code>
                        <table>fd_preorder_code</table>
                    </code>
                </entities>
            </preorder_mysql4>
            <customer>
                <rewrite>
                    <customer>Fidesio_Preorder_Model_Customer</customer>
                </rewrite>
            </customer>
        </models>
        <resources>
            <preorder_setup>
                <setup>
                    <module>Fidesio_Preorder</module>
                    <class>Fidesio_Preorder_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </preorder_setup>
            <preorder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </preorder_write>
            <preorder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </preorder_read>
        </resources>
        <blocks>
            <preorder>
                <class>Fidesio_Preorder_Block</class>
            </preorder>
            <page>
                <rewrite>
                    <html_head>Fidesio_Preorder_Block_Html_Head</html_head>
                </rewrite>
            </page>
        </blocks>
        <rewrite>
            <customer_account_createpost>
                <from><![CDATA[#^/customer/account/createpost/$#]]></from>
                <to>/preorder/account/createpost/</to>
            </customer_account_createpost>
            <customer_account_index>
                <from><![CDATA[#^/customer/account(/index)?[\/]?$#]]></from>
                <to>/preorder/account/index/</to>
            </customer_account_index>
        </rewrite>
        <helpers>
            <preorder>
                <class>Fidesio_Preorder_Helper</class>
            </preorder>
        </helpers>
        <page>
            <layouts>
                <phantom_page_layout module="page" translate="label">
                    <label>Phantom page layout</label>
                    <template>page/2columns-right-phantom.phtml</template>
                    <layout_handle>phantom_page_layout</layout_handle>
                </phantom_page_layout>
                <phantom_product_layout module="page" translate="label">
                    <label>Phantom product layout</label>
                    <template>page/1column.phtml</template>
                    <layout_handle>phantom_product_layout</layout_handle>
                </phantom_product_layout>
                <phantom_homepage module="page" translate="label">
                    <label>Phantom Homepage</label>
                    <template>page/1column-homepage.phtml</template>
                    <layout_handle>phantom_homepage</layout_handle>
                </phantom_homepage>
                <phantom_webshow module="page" translate="label">
                    <label>Phantom Webshow</label>
                    <template>page/webshow.phtml</template>
                    <layout_handle>phantom_webshow</layout_handle>
                </phantom_webshow>
            </layouts>
        </page>
        <!--<sales>-->
            <!--<quote>-->
                <!--<item>-->
                    <!--<product_attributes>-->
                        <!--<shipping_date />-->
                    <!--</product_attributes>-->
                <!--</item>-->
            <!--</quote>-->
        <!--</sales>-->
        <!--<fieldsets>-->
            <!--<sales_convert_quote_item>-->
                <!--<shipping_date>-->
                    <!--<to_order_item>*</to_order_item>-->
                <!--</shipping_date>-->
            <!--</sales_convert_quote_item>-->
            <!--<sales_convert_order_item>-->
                <!--<shipping_date>-->
                    <!--<to_quote_item>*</to_quote_item>-->
                <!--</shipping_date>-->
            <!--</sales_convert_order_item>-->
        <!--</fieldsets>-->
    </global>

    <admin>
        <routers>
            <preorder>
                <use>admin</use>
                <args>
                    <module>Fidesio_Preorder</module>
                    <frontName>preorder</frontName>
                </args>
            </preorder>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <preorder>
                    <file>fidesio_preorder.xml</file>
                </preorder>
            </updates>
        </layout>
        <translate>
            <modules>
                <Fidesio_Preorder>
                    <files>
                        <default>Fidesio_Preorder.csv</default>
                    </files>
                </Fidesio_Preorder>
            </modules>
        </translate>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <preorder_customer_grid_block_before>
                        <class>Fidesio_Preorder_Model_Adminhtml_Observer</class>
                        <method>customer_grid_block_html_before</method>
                    </preorder_customer_grid_block_before>
                </observers>
            </adminhtml_block_html_before>
            <!--<sales_quote_item_set_product>-->
                <!--<observers>-->
                    <!--<preorder_setattribute>-->
                        <!--<class>Fidesio_Preorder_Model_Order_Observer</class>-->
                        <!--<method>sales_quote_item_set_attribute</method>-->
                    <!--</preorder_setattribute>-->
                <!--</observers>-->
            <!--</sales_quote_item_set_product>-->
        </events>
    </adminhtml>

    <frontend>
        <routers>
            <preorder>
                <use>standard</use>
                <args>
                    <module>Fidesio_Preorder</module>
                    <frontName>preorder</frontName>
                </args>
            </preorder>
        </routers>
        <layout>
            <updates>
                <preorder>
                    <file>fidesio_preorder.xml</file>
                </preorder>
            </updates>
        </layout>
        <translate>
            <modules>
                <Fidesio_Preorder>
                    <files>
                        <Fidesio_Preorder>Fidesio_Preorder.csv</Fidesio_Preorder>
                    </files>
                </Fidesio_Preorder>
            </modules>
        </translate>
        <events>
            <sales_order_place_after>
                <observers>
                    <preorder_sales_order_observer>
                        <class>Fidesio_Preorder_Model_Order_Observer</class>
                        <method>save_code</method>
                    </preorder_sales_order_observer>
                </observers>
            </sales_order_place_after>
            <controller_action_predispatch_catalog_category_view>
                <observers>
                    <code_predispatch>
                        <class>Fidesio_Preorder_Model_Order_Observer</class>
                        <method>catalog_category_view_predispatch</method>
                    </code_predispatch>
                </observers>
            </controller_action_predispatch_catalog_category_view>
            <sales_quote_item_set_product>
                <observers>
                    <preorder_setattribute>
                        <class>Fidesio_Preorder_Model_Order_Observer</class>
                        <method>sales_quote_item_set_attribute</method>
                    </preorder_setattribute>
                </observers>
            </sales_quote_item_set_product>
        </events>
    </frontend>
</config>